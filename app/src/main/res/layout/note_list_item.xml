<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="5dp"
    app:layout_editor_absoluteX="5dp"
    android:background="@android:drawable/dialog_holo_light_frame">

    <TextView
        android:id="@+id/textNoteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Notiztitel"
        android:textSize="15sp"
        android:maxLength="35"
        android:textStyle="bold"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/textNoteContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textNoteName"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="6"
        android:text="Notizinhalt" />

    <LinearLayout
        android:id="@+id/layoutNoteItemButtonArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentEnd="true">

        <ImageButton
            android:id="@+id/buttonUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:text="@string/label_button_edit_goal"
            app:srcCompat="@drawable/ic_edit_black"
            android:layout_marginEnd="5dp" />

        <ImageButton
            android:id="@+id/buttonDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:text="@string/label_button_delete_goal"
            app:srcCompat="@drawable/ic_delete_forever_black" />
    </LinearLayout>

</RelativeLayout>